#!/usr/bin/env bash

set -eux

# Copy common utils
mkdir -p ${BOSH_INSTALL_TARGET}/common
cp -a ${BOSH_COMPILE_TARGET}/common/* ${BOSH_INSTALL_TARGET}/common

# Extract nginx package
tar xzvf ${BOSH_COMPILE_TARGET}/nginx/nginx-1.14.2.tar.gz

# Extract pcre package
tar xzvf ${BOSH_COMPILE_TARGET}/nginx/pcre-8.42.tar.gz

# Build nginx package
cd ${BOSH_COMPILE_TARGET}/nginx-1.14.2
./configure \
  --prefix=${BOSH_INSTALL_TARGET} \
  --with-pcre=${BOSH_COMPILE_TARGET}/pcre-8.42 \
  --with-http_ssl_module \
  --with-file-aio
make
make install
