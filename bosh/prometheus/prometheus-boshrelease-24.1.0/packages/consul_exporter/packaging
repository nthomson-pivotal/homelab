#!/usr/bin/env bash

set -eux

# Copy common utils
mkdir -p ${BOSH_INSTALL_TARGET}/common
cp -a ${BOSH_COMPILE_TARGET}/common/* ${BOSH_INSTALL_TARGET}/common

# Extract consul_exporter package
mkdir -p ${BOSH_INSTALL_TARGET}/bin
tar xzvf ${BOSH_COMPILE_TARGET}/consul_exporter/consul_exporter-0.4.0.linux-amd64.tar.gz
cp -a ${BOSH_COMPILE_TARGET}/consul_exporter-0.4.0.linux-amd64/* ${BOSH_INSTALL_TARGET}/bin
