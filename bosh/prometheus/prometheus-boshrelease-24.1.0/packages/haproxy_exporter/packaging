#!/usr/bin/env bash

set -eux

# Copy common utils
mkdir -p ${BOSH_INSTALL_TARGET}/common
cp -a ${BOSH_COMPILE_TARGET}/common/* ${BOSH_INSTALL_TARGET}/common

# Extract haproxy_exporter package
mkdir -p ${BOSH_INSTALL_TARGET}/bin
tar xzvf ${BOSH_COMPILE_TARGET}/haproxy_exporter/haproxy_exporter-0.10.0.linux-amd64.tar.gz
cp -a ${BOSH_COMPILE_TARGET}/haproxy_exporter-0.10.0.linux-amd64/* ${BOSH_INSTALL_TARGET}/bin
