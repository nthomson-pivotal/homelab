#!/usr/bin/env bash

set -eux

# Copy common utils
mkdir -p ${BOSH_INSTALL_TARGET}/common
cp -a ${BOSH_COMPILE_TARGET}/common/* ${BOSH_INSTALL_TARGET}/common

# Extract graphite_exporter package
mkdir -p ${BOSH_INSTALL_TARGET}/bin
tar xzvf ${BOSH_COMPILE_TARGET}/graphite_exporter/graphite_exporter-0.4.2.linux-amd64.tar.gz
cp -a ${BOSH_COMPILE_TARGET}/graphite_exporter-0.4.2.linux-amd64/* ${BOSH_INSTALL_TARGET}/bin
